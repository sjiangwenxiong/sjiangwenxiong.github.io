page{
    background-color: #efefef;
}
.list{
    background-color:#fff;
    margin-bottom:10rpx;
    padding:22rpx 0;
    position: relative;
}
.content1{
    display: flex;
    align-items:center;
    font-size:28rpx;
    color:#333;
    padding:0 29rpx;
    height: 61rpx;
}
.msg_name{
    flex: 2.0;
}
.msg_phone{
    flex:8.0;
}
.msg_img{
    position: absolute;
    width:17rpx;
    height:29rpx;
    top:60rpx;
    right:29rpx;
}
.line{
    height:5px;
    width:100%;
    color:#000;
}
.content2{
    display: flex;
    align-items:center;
    font-size:28rpx;
    color:#333;
    padding:0 29rpx;
    height: 82rpx;
    border-top:1px solid #f0f0f0;
}
.hide{
    display: none;
}
.msg_icon1{
    width:27rpx;
    height:27rpx;
}
.msg_del{
    width:25rpx;
    height:25rpx;
}
.msg_word{
    margin-left:15rpx;
    color:#333;
}
.msg_word2{
    color:#0085e0;
    margin-left:15rpx;
}
.lf_btn{
    flex:5;
    text-align: left;
}
.rt_btn{
    flex:5;
    text-align: right;
}
.add_foot_view {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
}

.add_foot{
    position: fixed;
    bottom: 0;
    left:0;
    background:#0085e0;
    width: 100%;
    text-align: center;
    height: 96rpx;
    line-height: 96rpx;
    font-size:30rpx;
    color:#fff;
}