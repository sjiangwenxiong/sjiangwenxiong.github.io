page{
    background-color:#efefef;
}
.balance-main{
    border-top: 1px solid #f4f4f4;
    background-color:#fff;
}
.balance-top{
    display:flex;
    align-items:center;
    text-align: center;
    justify-content: center;
    height: 48px;
    border-bottom: 1px solid #d3d3d3;
}
.balance-top text{
    color:#333;
    font-size:30rpx;
}
.balance-img{
    width:19px;
    height:19px;
    margin-right:10px;
}
.table{
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
}
.table__hd{
  color: #0085e0;
  height: 93rpx;
  font-size: 30rpx;
  border-bottom:1px solid #d3d3d3;
}
.table__bd{
  color: #333;
  font-size: 26rpx;
}
.table__row{
  height: 93rpx;
  display: flex;
  align-items: center;
}
.table__title{
  flex: 1;
  text-align: center;
}
.table__text{
  flex: 1;
  text-align: center;
}