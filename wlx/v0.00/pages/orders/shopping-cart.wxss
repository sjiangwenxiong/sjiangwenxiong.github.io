.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 185rpx;
    border-bottom: 20rpx solid #f4f4f4;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 185rpx;
    height: 185rpx;
}
.cart-list .cart-pro-name{
    display: inline-block;
    width: 300rpx;
    height: 105rpx;
    line-height: 50rpx;
    overflow: hidden;
    font-size:30rpx;
    color:#333;
}
.cart-list .cart-pro-price{
    position: absolute;
    display: block;
    bottom:20rpx;
    font-size:32rpx;
    color:#ec6a2c;
    line-height: 80rpx;
}
.cart-list .cart-count-box{
    float: right;
    bottom: 20rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 80rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    width: 44rpx;
    height:44rpx;
}
.cart-count-num{
    width: 86rpx;
    font-size:26rpx;
    color:#333;
}

.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 114rpx;
    line-height: 114rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #fff;
    border-top: 1px solid #e1e1e1;
    color: #333;
}
.check-all{
    float: left;
    font-size:26rpx;
    color:#333;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 19rpx;
    top: 25rpx;
    width: 154rpx;
    height: 72rpx;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 154rpx;
  height: 72rpx;
}
.order-settlement{
    width: 154rpx;
    height: 72rpx;
    border:none;
    background:#0085e0;
    color:#fff;
    font-size:26rpx;
    border-radius: 5rpx;
}
.cart-del{
    position: absolute;
    right: 190rpx;
    top:25rpx;
    width: 154rpx;
    height: 72rpx;
    font-size: 26rpx;
    background-color:#aaa;
    color:#fff;
    border-radius: 5rpx;
}
.cart-msg{
    display: inline-block;
    margin-left:60rpx;
    margin-top:16rpx;
    text-align: right;
}
.cart-toatl-price{
    line-height: 40rpx;
    font-size:24rpx;
    color:#ec6a2c;
}
.cart-toatl-freight{
    line-height: 40rpx;
    font-size:24rpx;
    color:#aaa;
}
.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}